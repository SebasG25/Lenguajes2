<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo"
    android:paddingTop="50dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/casa2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/imgHome"></ImageView>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenuConsultas"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnMenuRegistro"
        android:text="CONSULTAS"
        android:textSize="20dp"
        android:background="@drawable/btn_diseno"
        ></Button>

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenuRegistro"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="REGISTRO"
        android:textSize="20dp"
        android:background="@drawable/btn_diseno"
        ></Button>

</RelativeLayout>