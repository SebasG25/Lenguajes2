<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ListView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvHabitaciones"
            android:dividerHeight="3dp"
            android:divider="@android:color/white"
            ></ListView>

    </ScrollView>

    <EditText
        android:paddingLeft="30dp"
        android:inputType="number"
        android:id="@+id/txtId"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Ingrese Id"
        android:textSize="20dp"
        android:background="@drawable/text_diseno"></EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrendada:"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tvArrendada"
        ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/tvRespuestaArriendo"
            android:layout_toRightOf="@id/tvArrendada"
            android:text="NO"
            android:paddingLeft="10dp"></TextView>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tvArrendada"
            android:id="@+id/swchArrendada"></Switch>
    </RelativeLayout>

</LinearLayout>