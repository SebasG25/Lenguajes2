<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fondo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TableroActivity"
        android:gravity="top"
        >

        <TextView
            android:id="@+id/tvNombreJugador1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Jugador1"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>
        <GridLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="5">

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="1"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn2"
                android:layout_height="50dp"
                android:text="2"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn3"
                android:layout_height="50dp"
                android:text="3"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn4"
                android:layout_height="50dp"
                android:text="4"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn5"
                android:layout_height="50dp"
                android:text="5"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn6"
                android:layout_height="50dp"
                android:text="6"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn7"
                android:layout_height="50dp"
                android:text="7"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn8"
                android:layout_height="50dp"
                android:text="8"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn9"
                android:layout_height="50dp"
                android:text="9"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn10"
                android:layout_height="50dp"
                android:text="10"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn11"
                android:layout_height="50dp"
                android:text="11"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn12"
                android:layout_height="50dp"
                android:text="12"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn13"
                android:layout_height="50dp"
                android:text="13"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn14"
                android:layout_height="50dp"
                android:text="14"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn15"
                android:layout_height="50dp"
                android:text="15"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn16"
                android:layout_height="50dp"
                android:text="16"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn17"
                android:layout_height="50dp"
                android:text="17"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn18"
                android:layout_height="50dp"
