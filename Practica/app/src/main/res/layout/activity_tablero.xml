                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn19"
                android:layout_height="50dp"
                android:text="19"
                android:textSize="25dp"></Button>

            <Button
                android:background="@drawable/boton"
                android:id="@+id/btn20"
                android:layout_height="50dp"
                android:text="20"
                android:textSize="25dp"></Button>

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:text="Jugador2"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:id="@+id/tvNombreJugador2"
            android:layout_marginBottom="5dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvPuntaje1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:gravity="center"
                android:text="0"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="81dp"></TextView>

            <TextView

                android:id="@+id/tvPuntaje2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:layout_toRightOf="@id/tvPuntaje1"
                android:background="@drawable/boton"
                android:gravity="center"
                android:text="0"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tvPuntaje1"
                tools:layout_editor_absoluteY="0dp"></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/tvPregunta"
            android:text="Pregunta"
            android:background="@drawable/marco"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"></TextView>

        <Button
            android:background="@drawable/boton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnOpcion1"
            android:text="Opcion 1"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"></Button>

        <Button
            android:background="@drawable/boton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnOpcion2"
            android:text="Opcion 2"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"></Button>

        <Button
            android:background="@drawable/boton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnOpcion3"
            android:text="Opcion 3"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"></Button>

        <Button
            android:background="@drawable/boton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnOpcion4"
            android:text="Opcion 4"
            android:textSize="20dp"></Button>


    </LinearLayout>
</ScrollView>