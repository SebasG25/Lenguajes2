<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservaActivity">

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/btn_ShowDate"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_below="@+id/calendar"
        android:layout_height="wrap_content"
        android:text="Button" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:layout_below="@+id/btn_ShowDate"
        android:layout_height="wrap_content"
        android:text="Fecha" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ShowDate">


        <RadioGroup

            android:layout_width="wrap_content"
            android:layout_below="@+id/btn_ShowDate"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="MaÃ±ana"></TextView>

            <RadioButton
                android:id="@+id/rb_810"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 - 10"
                android:textSize="23dp"></RadioButton>

            <RadioButton
                android:id="@+id/rb_1012"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 - 12"
                android:textSize="23dp"></RadioButton>
        </RadioGroup>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Tarde"></TextView>

            <RadioButton
                android:id="@+id/rb_1214"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 - 14"
                android:textSize="23dp"></RadioButton>

            <RadioButton
                android:id="@+id/rb_1416"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 - 16"
                android:textSize="23dp"></RadioButton>

            <RadioButton
                android:id="@+id/rb_1618"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 - 18"
                android:textSize="23dp"></RadioButton>

            <RadioButton
                android:id="@+id/rb_1820"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 - 20"
                android:textSize="23dp"></RadioButton>

        </RadioGroup>

    </RadioGroup>


</RelativeLayout>