<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#253A4B"
    android:layout_height="match_parent"
    tools:context=".ReservaActivity">

    <TextView
        android:id="@+id/txtSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/aladin"
        android:layout_marginTop="80dp"
        android:textSize="25dp"
        android:text="Seleccione una fecha"
        android:textColor="#059EE8"></TextView>
    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="250dp"
        android:layout_below="@+id/txtSelect"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp" />

    <LinearLayout
        android:id="@+id/lnr3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/calendar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp">

        <RadioGroup
            android:id="@+id/rgTimes"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:textSize="25dp"
                android:text="Hora"
                android:textColor="#059EE8"></TextView>

            <RadioButton
                android:id="@+id/rb_810"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 - 10"
                android:textSize="20dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/rb_1012"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 - 12"
                android:textSize="20dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/rb_1214"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 - 14"
                android:textSize="20dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/rb_1416"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 - 16"
                android:textSize="20dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/rb_1618"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 - 18"
                android:textSize="20dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/rb_1820"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 - 20"
                android:textSize="20dp">

            </RadioButton>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Reserve"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_below="@+id/calendar"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_design"
        android:layout_marginTop="60dp"
        android:text="Reservar" />

    <ImageView
        android:id="@+id/imgbottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:rotation="180"
        app:srcCompat="@drawable/top"
        android:translationY="570dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-45dp"
        tools:layout_editor_absoluteY="-4dp" />
    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:fontFamily="@font/aladin"
        android:textSize="30dp"
        android:layout_marginTop="650dp"></TextView>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_below="@+id/txtDate"
        android:fontFamily="@font/aladin"
        android:textSize="30dp"></TextView>

</RelativeLayout>