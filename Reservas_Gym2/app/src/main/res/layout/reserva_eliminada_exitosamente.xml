<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reserva_eliminada_exitosamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/reserva_eliminada_exitosamente"></ImageView>
    <Button
        android:id="@+id/reservaEliminadaOkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="OK"
        android:background="@drawable/reservar_btn_design"
        android:layout_below="@id/reserva_eliminada_exitosamente"
        android:layout_marginLeft="112dp"></Button>

</RelativeLayout>