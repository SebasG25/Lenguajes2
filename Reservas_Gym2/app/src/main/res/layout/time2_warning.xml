<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/warning_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/time_warning"></ImageView>
    <Button
        android:id="@+id/OkTimeWarningBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="OK"
        android:background="@drawable/reservar_btn_design"
        android:layout_below="@id/warning_time2"
        android:layout_marginLeft="112dp"></Button>
</RelativeLayout>