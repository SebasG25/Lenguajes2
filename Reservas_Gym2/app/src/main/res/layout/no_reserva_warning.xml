<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/noReserva_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/no_reserva_warning"></ImageView>
    <Button
        android:id="@+id/noReservaOkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="OK"
        android:background="@drawable/reservar_btn_design"
        android:layout_below="@id/noReserva_warning"
        android:layout_marginLeft="112dp"></Button>
</RelativeLayout>