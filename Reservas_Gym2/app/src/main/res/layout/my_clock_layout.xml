<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="420dp"
    android:src="@drawable/bg_panel"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    android:adjustViewBounds="true"
    android:scaleType="fitXY"
    android:background="@android:color/transparent"></ImageButton>

<TimePicker
    android:id="@+id/myTimePicker"
    android:theme="@style/AppTheme"
    android:background="@android:color/transparent"
    android:layout_width="300dp"
    android:layout_height="380dp"
    android:layout_marginTop="10dp"></TimePicker>

    <com.spark.submitbutton.SubmitButton
        android:id="@+id/btnTimeSetComplete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myTimePicker"
        android:layout_centerHorizontal="true"
        android:text="Done"
        android:textColor="@color/gray"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="800"
        app:sub_btn_line_color="#00DAC5"
        app:sub_btn_ripple_color="@color/primary_color"
        app:sub_btn_tick_color="@color/white" />
</RelativeLayout>