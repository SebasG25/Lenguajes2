<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:src="@drawable/bg_panel"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"></ImageButton>

<CalendarView
    android:id="@+id/myDatePicker"
    android:layout_marginTop="30dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"></CalendarView>

    <com.spark.submitbutton.SubmitButton
        android:id="@+id/btnDateSetComplete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myDatePicker"
        android:layout_marginLeft="60dp"
        android:text="Done"
        android:textColor="@color/gray"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="800"
        app:sub_btn_line_color="#00DAC5"
        app:sub_btn_ripple_color="@color/primary_color"
        app:sub_btn_tick_color="@color/white" />
</RelativeLayout>